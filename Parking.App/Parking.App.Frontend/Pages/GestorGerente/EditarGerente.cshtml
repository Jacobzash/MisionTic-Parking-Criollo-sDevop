@page
@model Parking.App.Frontend.EditarGerenteModel
@using Parking.App.Dominio
@{
}
<div class = "center">
<h3>Editar Gerente</h3>
<form method="post" class="mt-3">
    
    <div class="form-group row">       
        <input asp-for="gerente.Id" class="form-control"  type="hidden" required >        
    </div>

    <div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="gerente.Nombre" class="col-sm-2">Nombre</label>
        <input asp-for="gerente.Nombre" class="form-control">
        <span class ="text-danger" asp-validation-for="gerente.Nombre"></span>        
    </div>

    <div class="form-group col-md-6">
        <label asp-for="gerente.Identificacion" class="col-sm-2">Identificacion</label>
        <input asp-for="gerente.Identificacion" class="form-control">  
        <span class ="text-danger" asp-validation-for="gerente.Identificacion"></span>      
    </div>   
    
        
    <div class="form-group col-md-6">  
        <label asp-for="gerente.Telefono" class="col-sm-2">Telefono</label>
        <input asp-for="gerente.Telefono" class="form-control">  
        <span class ="text-danger" asp-validation-for="gerente.Telefono"></span>         
    </div>

    <div class="form-group col-md-6">
        <label asp-for="gerente.Direccion" class="col-sm-2">Direccion</label>
        <input asp-for="gerente.Direccion" class="form-control" required>        
    </div> 

    <div class="form-group col-md-6">
        <label asp-for="gerente.Email" class="col-sm-2">Email</label>
        <input asp-for="gerente.Email" class="form-control"  required>        
    </div> 

    <div class="form-group col-md-6">
        <label asp-for="gerente.Contrasena" class="col-sm-2">Contraseña</label>
        <input asp-for="gerente.Contrasena" class="form-control">
        <span class ="text-danger" asp-validation-for="gerente.Contrasena"></span> 
    </div>

    
    <div class="form-group col-md-6">
        <label asp-for="gerente.Fecha_nacimiento" class="col-sm-2">Fecha.Nacimiento</label>
        <input asp-for="gerente.Fecha_nacimiento" class="form-control"  required>        
    </div>

    <div class="form-group col-md-6">        
        <input asp-for="gerente.Fecha_nacimiento" class="form-control" type="hidden" required>        
    </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./Listargerente" class="btn btn-primary">Cancelar</a>
    </div>
</form>
</div>
