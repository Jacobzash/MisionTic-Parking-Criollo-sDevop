@page
@model Parking.App.Frontend.EditarAuxiliarModel
@using Parking.App.Dominio
@{
}
<div class = "center">
<h3>Editar Auxiliar</h3>
<form method="post" class="mt-3">
    
    <div class="form-group row">
       
        <input asp-for="auxiliar.Id" class="form-control"  type="hidden" required >
        
    </div>
    <div class="form-row">
    <div class="form-group col-md-6">
        <label asp-for="auxiliar.Nombre" class="col-sm-2">Nombre</label>
        <input asp-for="auxiliar.Nombre" class="form-control"  required >
        
    </div>
    <div class="form-group col-md-6">
        <label asp-for="auxiliar.Identificacion" class="col-sm-2">Identificacion</label>
        <input asp-for="auxiliar.Identificacion" class="form-control"  required>
        
    </div>   
    
        
    <div class="form-group col-md-6">  
        <label asp-for="auxiliar.Telefono" class="col-sm-2">Telefono</label>
        <input asp-for="auxiliar.Telefono" class="form-control"  required>
           
    </div>

    <div class="form-group col-md-6">
        <label asp-for="auxiliar.Direccion" class="col-sm-2">Direccion</label>
        <input asp-for="auxiliar.Direccion" class="form-control" required>
        
    </div> 

    <div class="form-group col-md-6">
        <label asp-for="auxiliar.Email" class="col-sm-2">Email</label>
        <input asp-for="auxiliar.Email" class="form-control"  required>
        
    </div> 

    <div class="form-group col-md-6">
        <label asp-for="auxiliar.Contrasena" class="col-sm-2">Contraseña</label>
        <input asp-for="auxiliar.Contrasena" class="form-control"  required>
        
             
    </div>

    
    <div class="form-group col-md-6">
        <label asp-for="auxiliar.Fecha_nacimiento" class="col-sm-2">Fecha.Nacimiento</label>
        <input asp-for="auxiliar.Fecha_nacimiento" class="form-control"  required>
        
    </div>

    <div class="form-group col-md-6">
        <label asp-for="auxiliar.Turno" class="col-sm-2">Turno</label>
        <input asp-for="auxiliar.Turno" class="form-control"  required>
        
    </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./index" class="btn btn-primary">Cancelar</a>
    </div>
</form>
</div>
