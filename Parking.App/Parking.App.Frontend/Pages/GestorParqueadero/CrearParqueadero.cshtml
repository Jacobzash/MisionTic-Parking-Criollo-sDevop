@page
@model Parking.App.Frontend.CrearParqueaderoModel
@using Parking.App.Dominio
@{
}
<h1>Crear Parqueadero</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="parqueadero.Piso" class="col-sm-2">Piso</label>
        <input asp-for="parqueadero.Piso" class="form-control" value="" required>
    </div>

    <div class="form-group row">
        <label asp-for="parqueadero.Espacio" class="col-sm-2">Espacio</label>
        <input asp-for="parqueadero.Espacio" class="form-control" value="">
    </div>

    <div class="form-group row">
        <label asp-for="parqueadero.Estado" class="col-sm-2">Estado</label>
        <input asp-for="parqueadero.Estado" class="form-control" value="">
    </div>

    </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-page="./ListarParqueadero" class="btn btn-primary">Cancelar</a>
        </div>
</form>
