@model Parking.App.Frontend.EditarParqueaderoModel
@{
}
<h1>Editar Parqueadero</h1>
<form method="post" class="mt-3">
    <div class="form-group row"> 
        
        <input asp-for="parqueadero.Id" type="hidden" class="form-control" required>
    </div>

    <div class="form-group row">
        <label asp-for="parqueadero.Piso" class="col-sm-2">Piso</label>
        <input asp-for="parqueadero.Piso" class="form-control" required>
    </div>

    <div class="form-group row">
        <label asp-for="parqueadero.Espacio" class="col-sm-2">Espacio</label>
        <input asp-for="parqueadero.Espacio" class="form-control" >
    </div>

    <div class="form-group row">
        <label asp-for="parqueadero.Estado" class="col-sm-2">Estado</label>
        <input asp-for="parqueadero.Estado" class="form-control" >
    </div>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="./ListarParqueadero" class="btn btn-primary">Cancelar</a>
    </div>
</form>

