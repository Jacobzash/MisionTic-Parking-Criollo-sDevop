@page
@using Dominio
@model Parking.App.Frontend.Pages.CrearReservaModel
@{
}
<h1>Crear Reserva</h1>
<form method="post" class="mt-3">
   <div class="form-group row">
        <label asp-for="IdVehiculo" class="col-sm-2">Vehiculo</label>
        <select asp-for="IdVehiculo" asp-items="Model.vehiculos"></select>
    </div>

    <div class="form-group row">
        <label asp-for="reserva.Espacio" class="col-sm-2">Espacio a Ocupar</label>
        <div class="col-sm-10">
            <select asp-for="reserva.Espacio" asp-items="Html.GetEnumSelectList<Espacio>()"></select>   
        </div>
        <span class="text-danger" asp-validation-for="reserva.Espacio"></span>
    </div>

    <div class="form-group row">
        <label asp-for="reserva.Hora_Entrada" class="col-sm-2">Hora de Entrada</label>
        <input asp-for="reserva.Hora_Entrada" class="form-control" value="">
    </div>

    <div class="form-group row">
        <label asp-for="reserva.Hora_Salida" class="col-sm-2">Hora de Salida</label>
        <input asp-for="reserva.Hora_Salida" class="form-control" value="">
    </div>
    <div class="form-group row">
        <label asp-for="reserva.Estado_Reserva" class="col-sm-2">Estado Reserva</label>
        
        <div class="col-sm-10">
            <select asp-for="reserva.Estado_Reserva"  asp-items="Html.GetEnumSelectList<Estado_Reserva>()"></select>
        </div>
    </div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-page="./ListarReserva" class="btn btn-primary">Cancelar</a>
        </div>
</form>