@page
@model Parking.App.Frontend.Pages.ListarReservaModel
@using Parking.App.Dominio
@{
}
<h1>Gestionar Reserva</h1>
<P>En está página podrá gestionar su reserva</P>

<a class="btn btn-primary table-btn" asp-page="./CrearReserva">Agregar Reserva</a>
<table class="table">
  <thead class="thead-dark">
    <tr>
      
      <th scope="col">Placa</th>
      <th scope="col">Espacio</th>
      <th scope="col">Hora Entrada</th>   
      <th scope="col">Hora de Salida</th> 
      <th scope="col">Estado de la Reserva/th> 
       
      <th scope="col">Editar</th> 
    </tr>
  </thead>

@foreach(var reserva in Model.reservar)
{
  <tr>
        <td>@reserva.Vehiculo.Placa</td>
        <td>@reserva.Espacio</td>
        <td>@reserva.Hora_Entrada</td>
        <td>@reserva.Hora_Salida</td>
        <td>@reserva.Estado_Reserva</td>   
       
        <td></td> 
        <td><a class="btn btn-primary table-btn" asp-page="./DetalleReserva" asp-route-Id="@reserva.Id">Detalle</a>
        <br>
        <a class="btn btn-primary table-btn" asp-page="./EditarReserva" asp-route-Id="@reserva.Id">Editar</a></td>
  </tr>
}

</table>